{{#with data}}
<div class="card">
    <div class="card-header">{{name}}</div>
    <div class="card-body">
        <div class="card-price">
            <span class="card-price-amount">
                ${{price}}
            </span>
            <span class="card-price-duration">
                / mo
            </span>
        </div>
        <div class="card-description">
            {{#each features}}
            <span class="card-description-item">
                {{this}}
            </span>
            {{/each}}

        </div>
        <div class="card-btn">
            <button class="btn {{#if @first}}btn-outline-primary{{else}}btn-primary{{/if}}">{{button}}</button>
        </div>
    </div>
</div>
{{/with}}